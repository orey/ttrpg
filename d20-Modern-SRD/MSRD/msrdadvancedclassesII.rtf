\par }\pard\plain \ql \li0\ri0\nowidctlpar\faauto\rin0\lin0\itap0 \f5\fs24\cf1\lang1033\langfe1033\cgrid\langnp1033\langfenp1033 {\f0\fs20\expnd-2\expndtw-10 
